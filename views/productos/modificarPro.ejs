<%- include("../templates/encabezado") %>
<%- include("../templates/menu") %>
<div class="container mt-5">
    <form action="/editarProducto" method="post">
        <div class="card">
            <div class="card-header">
                <h1>Modificar producto</h1>
            </div>
            <div class="card body">
                <input class="form-control mb-3" value="<%= product.nombre %>" type="text" name="nombre" id="nombre" placeholder="Nombre" autofocus>
                <input class="form-control mb-3" value="<%= product.precio %>" type="text" name="precio" id="precio" placeholder="Precio">
                <input class="form-control mb-3" value="<% product.foto %>" type="file" name="foto" id="foto">
            </div>
            <div class="card-footer">
                <button class="form-control btn btn-primary">Modificar producto</button>
            </div>
        </div>
    </form>
</div>
